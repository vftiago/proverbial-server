{
  "name": "proverbial-server",
  "version": "0.0.1",
  "description": "your proverbial server",
  "scripts": {
    "format": "prettier --write './src/**/*.{js,jsx,ts,tsx,yml,css,sass,json,md}'",
    "lint-staged": "lint-staged",
    "postinstall": "tsc",
    "start": "nodemon dist/app.js",
    "tsc": "tsc --watch"
  },
  "author": "Tiago Fernandes <vf.tiago@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/vftiago/proverbial-server.git",
  "private": false,
  "devDependencies": {
    "@types/mongodb": "^3.1.28",
    "@types/mongoose": "^5.5.5",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "@types/express": "^4.17.0",
    "connect-mongo": "^2.0.3",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "google-auth-library": "^4.2.0",
    "mongodb": "^3.2.7",
    "mongoose": "^5.5.14",
    "nodemon": "^1.19.1"
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,ts,tsx,yml,css,sass,json,md}": [
      "tsc",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  }
}
